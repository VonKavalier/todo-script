#!/bin/bash

file="/Users/von/Documents/TODO.md"

if [[ ! ${1+x} ]]; then
    vim $file
elif [ $1 == "infos" ]; then
    echo -e "\033[1m\033[91m√Ä faire :\033[0m";
    cat $file | grep --color=never -F "[ ]";

    echo -e "\n\033[1m\033[34mEn cours :\033[0m";
    cat $file | grep --color=never -F "[~]";

    echo -e "\n\033[1m\033[32mFait :\033[0m";
    cat $file | grep --color=never -F "[x]";
else
    "$1" $file
fi
